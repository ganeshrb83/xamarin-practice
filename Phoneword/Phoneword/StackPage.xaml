<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoneword.StackPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" />
    </ContentPage.Padding>
    
    <ContentPage.Content >

        <StackLayout BackgroundColor="#FF127AC7" VerticalOptions="Fill" HorizontalOptions="Fill" >
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Fill"  Spacing="10">
                <Label Text="Welcome to Xamarin" HorizontalTextAlignment="Center" TextColor="White" FontSize="30" FontAttributes="Bold"/>
                <Label Text="Cross-platform apps made easy"  HorizontalTextAlignment="Center" TextColor="White" FontSize="22"/>
                <Button Text="Login" TextColor="White" FontSize="18" BackgroundColor="#1dabf0" HorizontalOptions="Fill"  VerticalOptions="Center"/>
                <Button Text="Register" TextColor="White" FontSize="18" BackgroundColor="#1dabf0" HorizontalOptions="Fill" VerticalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>